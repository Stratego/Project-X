<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:background="@drawable/herba"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical" >

    <TextView
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="@string/activity_tiendaobjetos_titulo"
            android:id="@+id/textView"
            android:textColor="#ffffff"
            android:textSize="26dp"
            android:gravity="center"/>



    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="@string/activity_tiendaobjetos_vertodos"
            android:background="@drawable/fusta2"
            android:onClick="onButtonClicked"
            android:id="@+id/tiendaobjetos_todos"/>
    <ListView
            android:layout_marginTop="24dp"
            android:id="@android:id/list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
    </ListView>

    <TextView
            android:id="@android:id/empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="10dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:text="@string/activity_tiendaobjetos_sinobjetos" />

</LinearLayout> 